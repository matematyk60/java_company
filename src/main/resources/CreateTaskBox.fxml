<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10.0" minWidth="380.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dgodek.company.GUI.CreateTaskController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="randomButton" mnemonicParsing="false" onAction="#randomButtonClicked" prefHeight="26.0" prefWidth="128.0" text="Get random!" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitButtonClicked" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="unitsField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Name of task:" GridPane.rowIndex="1" />
        <Label text="Units of work:" GridPane.rowIndex="2" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</GridPane>
